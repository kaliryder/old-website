<!--nav block-->
<nav class="nav" role="navigation">
    <div class="nav-block">
        {{!-- <div class="row"> --}}
            <!-- logo -->
            <div class="logo">
                <a href="/">
                    <img src="https://d1m8q0wflsfke6.cloudfront.net/img/misc/logo.png" alt="Logo" class="logo">
                </a>
            </div>
            <div class="nav-space"></div>
            <ul class="nav-bar">
                {{#each navItems}}
                    <li class="nav-item">
                        <a href={{this.link}} class="nav-link">
                            <img src="{{this.image}}" alt="{{this.title}}" class="nav-item">
                        </a>
                    </li>
                    <div class="nav-space"></div>
                {{/each}}
            </ul>
        {{!-- </div> --}}
    </div>
</nav>

<div class="space-block"></div>

<!--title block-->
<div class="title-block">
    <!--header-->
    <img src="{{header.link}}" alt="{{header.subcategory}}" class="title-block header-img">
</div>

<!-- check if rowArray exists and is not empty -->
{{#if rowArray}}
    <!-- iterate through each row in rowArray -->
    {{#each rowArray}}
        <div class="space-block"></div>
        <div class="row items-block">
            <div class="end-space"></div>
            <div class="item-space"></div>
            <!-- iterate through each item in the current row -->
            {{#if this}}
                {{#each this}} 
                    <div class="item">
                        <div class="row item-content-block">
                            <div class="item-end-space"></div>
                            <div class="item-content">
                                {{#if cover}}
                                    <a href="/item/{{category}}/{{subcategory}}/{{group}}/{{id}}" class="item-content">
                                        {{#isVideo cover}}
                                            <video autoplay loop muted>
                                                <source src="{{cover}}" type="video/mp4" class="item-content">
                                                Your browser does not support the video tag.
                                            </video>
                                            {{else}}
                                                <img src="{{cover}}" alt="{{title}}" class="item-content">
                                        {{/isVideo}}
                                    </a>
                                {{/if}}
                            </div>
                            <div class="item-end-space"></div>
                        </div>
                        <h3 class="item-text">{{title}}</h3>
                    </div>
                    <div class="item-space"></div>
                {{/each}}
            {{/if}}
            <div class="end-space"></div>
        </div>
    {{/each}}
{{/if}}

<div class="space-block"></div>

